.container {
  display: flex;
  flex-wrap: wrap;
}

.box {
  width: 100%;
  min-height: 150px;
}

@media screen and (min-width: 450px) {
  .dark_blue {
    width: 25%;
  }

  .light_blue{
    width: 75%;
  }
}

@media screen and (min-width: 550px) {
  .dark_blue, .green {
    width: 25%;
  }

  .light_blue{
    width: 50%;
  }
}